# LINE Login Configuration
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CALLBACK_URL=https://your-app.vercel.app/auth/callback

# Public LINE Configuration (for client-side)
NEXT_PUBLIC_LINE_CHANNEL_ID=your_line_channel_id
NEXT_PUBLIC_LINE_CALLBACK_URL=https://your-app.vercel.app/auth/callback

# Supabase Configuration
# Requirement 8.1, 8.2: Server-side only credentials
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AWS Configuration
# Requirement 9.1, 9.2, 9.3: Least privilege IAM credentials
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_EC2_INSTANCE_ID=your_ec2_instance_id

# Minecraft Server Configuration
# Host and port for Minecraft server health checks
MINECRAFT_SERVER_HOST=your-ec2-public-dns.compute.amazonaws.com
MINECRAFT_SERVER_PORT=19132

# Minecraft startup delay in seconds (default: 180)
# Time to wait after EC2 launch before considering Minecraft as "online"
MINECRAFT_STARTUP_DELAY_SECONDS=180

# HTTP health check endpoint (recommended for accurate status)
# Deploy minecraft-health-server.py on your EC2 instance (see HEALTH_CHECK_SETUP.md)
# Example: http://your-ec2-public-dns.compute.amazonaws.com:8080/health
MINECRAFT_HEALTH_CHECK_URL=http://your-ec2-public-dns.compute.amazonaws.com:8080/health

# Health check authentication token (optional but recommended for security)
# Generate a random token: openssl rand -hex 32
# Set the same token on EC2 as HEALTH_CHECK_TOKEN environment variable
HEALTH_CHECK_TOKEN=your_random_secure_token_here

# Session Configuration
# Requirement 7.4: Secure session management
SESSION_SECRET=your_random_session_secret_min_32_chars
SESSION_EXPIRY_DAYS=7

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
# Requirement 8.3: CORS configuration
# In production, set this to your actual domain
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting Configuration
# Requirement 7.4: Rate limiting settings
RATE_LIMIT_AUTH_MAX_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW_SECONDS=60
RATE_LIMIT_API_MAX_REQUESTS=100
RATE_LIMIT_API_WINDOW_SECONDS=60

# Supabase Security
# Requirement 8.2: Disable anonymous access in Supabase dashboard
# Set "Enable anonymous sign-ins" to OFF in Supabase Authentication settings

